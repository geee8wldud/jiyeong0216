<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/canvasView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:weightSum="1">


        <ImageButton
            android:layout_marginLeft="290dp"
            android:layout_marginTop="10dp"
            android:id="@+id/opendrawer"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_gravity="right"
            android:src="@drawable/menu" />


        <ImageView
            android:layout_width="240dp"
            android:layout_height="350dp"
            android:id="@+id/registermodel"
            android:layout_below="@+id/myface"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:background="@drawable/face"
            android:id="@+id/myface"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="95dp"
            android:layout_width="50dp"
            android:layout_height="60dp" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:id="@+id/img1"
            />
        <RelativeLayout
            android:layout_marginTop="450dp"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- android:background="@layout/buttonshape"-->
            <Button
                android:id="@+id/savebtn"
                android:layout_marginTop="12dp"
                android:layout_width="53dp"
                android:layout_height="60dp"
                android:background="@drawable/save_button"
                android:textColor="@color/white"
                android:textSize="15dp"
                />

            <Button
                android:id="@+id/returnbtn"
                android:layout_width="53dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/return_button"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/sharebtn"
                android:layout_width="53dp"
                android:layout_height="60dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/sharebutton"
                android:textColor="@color/white"
                android:textSize="15dp"/>

            <ImageView
                android:id="@+id/capture"
                android:layout_width="100dp"
                android:layout_height="100dp" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:padding="5dp" >


        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/closedrawer"
            android:layout_marginLeft="60dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:background="@drawable/login_icon"/>
        <RadioGroup
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/topbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="상의"
                android:textSize="12dp"/>
            <RadioButton
                android:id="@+id/bottombtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:text="하의"
                android:textSize="12dp"/>
        </RadioGroup>
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/removeallclothes"
            android:layout_marginLeft="50dp"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:background="@layout/buttonshape"
            android:text="삭제하기"
            android:textColor="@color/white"
            android:textSize="15dp"/>


        <GridView
            android:id="@+id/simpleGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>